<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffafa"
    tools:context="com.byteshaft.shiurim.MenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/splash_icon" />

        <Button
            android:id="@+id/button_minyanim"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:text="Minyanim"
            android:textAllCaps="false"
            android:theme="@style/AppTheme.Button" />


        <Button
            android:id="@+id/button_shiurim"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_minyanim"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:text="Shiurim"
            android:textAllCaps="false"
            android:theme="@style/AppTheme.Button" />


        <Button
            android:id="@+id/button_update"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_shiurim"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:text="Updates"
            android:textAllCaps="false"
            android:theme="@style/AppTheme.Button" />


        <Button
            android:id="@+id/button_contact"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_update"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:text="Contact Us"
            android:textAllCaps="false"
            android:theme="@style/AppTheme.Button" />


        <Button
            android:id="@+id/button_ads"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_contact"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:text="Ads"
            android:textAllCaps="false"
            android:theme="@style/AppTheme.Button" />

    </RelativeLayout>
</RelativeLayout>
